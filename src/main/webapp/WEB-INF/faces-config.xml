<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">

    <application>
        <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
    </application>
    
    <!-- INDEX -->
    
    <navigation-rule>
        <navigation-case>
            <from-outcome>irInicio</from-outcome>
            <to-view-id>/pages/inicio.xhtml</to-view-id>
            <redirect include-view-params="false">
            </redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>irBienvenida</from-outcome>
            <to-view-id>/pages/bienvenida.xhtml</to-view-id>
            <redirect include-view-params="false">
            </redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>irEmpleadorBusqueda</from-outcome>
            <to-view-id>/pages/empleadorBusqueda.xhtml</to-view-id>
            <redirect include-view-params="false">
            </redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>irListadoBienvenida</from-outcome>
            <to-view-id>/pages/bienvenida.xhtml</to-view-id>
            <redirect include-view-params="false">
            </redirect>
        </navigation-case>
    </navigation-rule>

</faces-config>