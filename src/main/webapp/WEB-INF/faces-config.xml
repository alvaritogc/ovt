<?xml version="1.0" encoding="UTF-8"?>

<faces-config
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
        version="2.0">

    <application>
        <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
        <locale-config>
            <default-locale>es_PE</default-locale>
            <supported-locale>es_PE</supported-locale>
        </locale-config>
    </application>

    <!-- INDEX -->

    <navigation-rule>
        <navigation-case>
            <from-outcome>irInicio</from-outcome>
            <to-view-id>/pages/inicio.xhtml</to-view-id>
            <redirect include-view-params="false">
            </redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>irEscritorio</from-outcome>
            <to-view-id>/pages/escritorio.xhtml</to-view-id>
            <redirect include-view-params="false">
            </redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>irEmpleadorBusqueda</from-outcome>
            <to-view-id>/pages/empleadorBusqueda.xhtml</to-view-id>
            <redirect include-view-params="false">
            </redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>irRegistro</from-outcome>
            <to-view-id>/pages/persona/registroPersona.xhtml</to-view-id>
            <redirect include-view-params="false">
            </redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>irContenidos</from-outcome>
            <to-view-id>/pages/contenidos/contenidos.xhtml</to-view-id>
            <redirect include-view-params="false">
            </redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>irUnidad</from-outcome>
            <to-view-id>/pages/persona/registroPersonaUnidad.xhtml</to-view-id>
            <redirect>
            </redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>irImpresionRoe</from-outcome>
            <to-view-id>/pages/declaracion/impresionRoe.xhtml</to-view-id>
            <redirect>
            </redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>irLogEstadoDocumento</from-outcome>
            <to-view-id>/pages/declaracion/logEstadoDocumento.xhtml</to-view-id>
            <redirect>
            </redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>irDescargarPlanillas</from-outcome>
            <to-view-id>/pages/declaracion/descargarPlanillas.xhtml</to-view-id>
            <redirect>
            </redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>irDeclaracionTrimestral</from-outcome>
            <to-view-id>/pages/declaracion/declaracionTrimestral.xhtml</to-view-id>
            <redirect>
            </redirect>
        </navigation-case>
        <navigation-case>
            <from-outcome>irDeclaracionAguinaldo</from-outcome>
            <to-view-id>/pages/declaracion/declaracionAguinaldo.xhtml</to-view-id>
            <redirect>
            </redirect>
        </navigation-case>
    </navigation-rule>
    /pages/declaracion/impresionRoe.jsf
</faces-config>